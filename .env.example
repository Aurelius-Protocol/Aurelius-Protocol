# Aurelius Miner Configuration
#
# Copy this file to .env and update with your values:
#   cp .env.example .env

# ============================================================================
# Wallet Configuration (REQUIRED)
# ============================================================================
# Your Bittensor wallet name and hotkey
# Create with: btcli wallet new_coldkey --wallet.name miner
#             btcli wallet new_hotkey --wallet.name miner --wallet.hotkey default
MINER_WALLET_NAME=miner
MINER_HOTKEY=default

# ============================================================================
# Network Configuration
# ============================================================================
# Which Bittensor network to use:
#   - finney: Mainnet (production)
#   - test: Testnet
#   - local: Local testing
BT_NETWORK=finney

# Subnet UID (check current subnet ID for Aurelius)
BT_NETUID=1

# Port for validator communication (default: 8091)
BT_PORT_VALIDATOR=8091

# ============================================================================
# Optional: Custom Subtensor Endpoint
# ============================================================================
# Override the default subtensor endpoint
# SUBTENSOR_ENDPOINT=wss://entrypoint-finney.opentensor.ai:443

# ============================================================================
# Local Mode (for testing without blockchain registration)
# ============================================================================
# Set to true to bypass blockchain and connect directly to a validator IP
# Useful for development/testing without wallet registration or stake
LOCAL_MODE=false

# If LOCAL_MODE=true, specify the validator's IP address
VALIDATOR_HOST=127.0.0.1

# ============================================================================
# Logging Configuration
# ============================================================================
# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Whether to log full prompts/responses (set to false for privacy)
LOG_SENSITIVE_DATA=false

# Maximum length of logged prompts/responses (characters)
MAX_LOG_LENGTH=100
